<?xml version="1.0" encoding="UTF-8"?>
<api context="/petstore" name="PetStore" publishSwagger="src/main/resources/metadata/UserInfoRestAPI_swagger.yaml" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" url-mapping="/pets">
        <inSequence>
        
            <property name="env_key_1" scope="default" type="STRING" value="pet_1"/>
            <property name="env_value_1" expression="$SYSTEM:PET_1" scope="default" type="STRING"/>
            <property name="env_key_2" scope="default" type="STRING" value="pet_2"/>
            <property name="env_value_2" expression="$SYSTEM:PET_2" scope="default" type="STRING"/>            
            <payloadFactory media-type="json">
                <format>
{
	"Info": "Integration with secrets",
	"data": [{
			"pet": "$1",
			"name": "$2"
		},
		{
			"pet": "$3",
			"name": "$4"
		}
	]
}             
                </format>
                <args>
                    <arg evaluator="json" expression="$ctx:env_key_1"/>
                    <arg evaluator="json" expression="$ctx:env_value_1"/>
                    <arg evaluator="json" expression="$ctx:env_key_2"/>
                    <arg evaluator="json" expression="$ctx:env_value_2"/>                    
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
